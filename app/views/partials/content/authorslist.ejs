<article class="authorslist <% if (pageID == 'home') { %>jumbotron hidden-xs<% } %>">
  <div class="container">
    <div class="row">
        <% authors.forEach(function(item) { %>
        <div class="<% if (pageID == 'home') { %>col-sm-4 text-center<% } else { %>col-sm-8 <% } %>">
          <h3 class="authorslist-title"><%= item.title %></h3>
          <h5 class="authorslist-name">with <a href="/authors/<%= item.shortname %>"><%= item.name %></a></h5>
          <p class="authorslist-info">
            <a href="/authors/<%= item.shortname %>">

              <% if (pageID == 'home') { %>
                <img class="authorslist-img img-circle" src="/images/authors/<%= item.shortname %>_tn.jpg" alt="Photo of <%= item.name %>"></a>
              <% } %>

              <% if (pageID == 'authorsList') { %>
                <img class="authorslist-img img-circle pull-left" src="/images/authors/<%= item.shortname %>_tn.jpg" alt="Photo of <%= item.name %>"></a>
              <% } %>
            </a>

            <% if (pageID == 'authorsDetail') { %>
              <img class="authorslist-img img-responsive pull-left" src="/images/authors/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>"></a>
            <% } %>
          </a>

            <% if (pageID !== 'home') { %>
              <% if (pageID == 'authorsList') { %>
                <%= item.summary %>
              <% } else { %>
                <%- item.description %>
              <% } %>
            <% } %>
          </p>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>
